---
import { Card as ShadcnCard } from './ui/card'

const {
  as: Tag = 'a',
  class: className,
  href,
  heading,
  subheading,
  repositoryPath,
  imagePath,
  altText,
} = Astro.props
---

<Tag href={href} class={`${className}`} `>
  <ShadcnCard
  className={`relative flex flex-col overflow-hidden shadow-lg transition duration-75 ease-in-out ${href ? 'cursor-pointer hover:border-primary' : ''} h-96`}
  >
    <img
      src={imagePath}
      alt={altText}
      class="h-48 w-full object-cover"
      loading="eager"
    />
    <div class="flex flex-col gap-y-0.5 p-5 flex-grow overflow-auto">
      <h1 class="text-lg font-medium">{heading}</h1>
      <h2 class="text-muted-foreground">{subheading}</h2>
      <h2 class="text-muted-foreground">{repositoryPath}</h2>
    </div>

    <slot />
  </ShadcnCard>
</Tag>
